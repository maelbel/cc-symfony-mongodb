<section class="{{ bg_class|default('mt-16 bg-sky-700 text-white rounded-xl p-8 flex items-center justify-between') }}">
  <div>
    <h3 class="text-2xl font-bold">{{ title|default('Special offer') }}</h3>
    <p class="mt-2">{{ text|default('Save 20% on stays this season. Limited time only.') }}</p>
  </div>
  <div>
    <a href="{{ button_url|default('#') }}" class="px-6 py-3 {{ btn_class|default('bg-white text-sky-700') }} rounded-lg font-semibold">{{ button_text|default('See offers') }}</a>
  </div>
</section>
