{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Admin Hotels - My Hotel{% endblock %}

{% block dashboard_content %}
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-sky-700">Hotels</h1>
    <p class="text-sm text-slate-500">Manage all hotels here.</p>
  </div>
  <div class="mb-4 flex justify-between items-center">
    <form method="get" class="flex gap-2">
      <input type="text" name="hotelName" value="{{ filters.hotelName }}" placeholder="Hotel Name" class="border border-slate-300 rounded px-3 py-2">
      <input type="text" name="hotelAddress" value="{{ filters.hotelAddress }}" placeholder="Hotel Address" class="border border-slate-300 rounded px-3 py-2">
      <input type="text" name="hotelCategory" value="{{ filters.hotelCategory }}" placeholder="Category" class="border border-slate-300 rounded px-3 py-2">
      <button type="submit" class="px-4 py-2 bg-sky-600 text-white rounded hover:bg-sky-700">Filter</button>
    </form>
    <a href="{{ path('admin_hotels_new') }}" class="px-4 py-2 bg-sky-600 text-white rounded hover:bg-sky-700">Add Hotel</a>
  </div>
  <div class="bg-white rounded shadow p-6">
    <table class="min-w-full divide-y divide-slate-200">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left text-xs font-medium text-slate-500">Code</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-slate-500">Name</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-slate-500">Address</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-slate-500">Category</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-slate-500">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for hotel in hotels %}
          <tr class="border-b">
            <td class="px-4 py-2">{{ hotel.hotelCode }}</td>
            <td class="px-4 py-2">{{ hotel.hotelName }}</td>
            <td class="px-4 py-2">{{ hotel.hotelAddress }}</td>
            <td class="px-4 py-2">{{ hotel.hotelCategory }}</td>
            <td class="px-4 py-2">
              <a href="{{ path('admin_hotels_view', {'codeHotel': hotel.hotelCode}) }}" class="text-sky-600 hover:underline">View</a>
              <a href="{{ path('admin_hotels_edit', {'codeHotel': hotel.hotelCode}) }}" class="ml-2 text-yellow-600 hover:underline">Edit</a>
              <form method="post" action="{{ path('admin_hotels_delete', {'codeHotel': hotel.hotelCode}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                <button type="submit" class="ml-2 text-red-600 hover:underline bg-transparent border-none cursor-pointer">Delete</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr><td colspan="5" class="px-4 py-2 text-center text-slate-500">No hotels found.</td></tr>
        {% endfor %}
      </tbody>
    </table>
    {% if pagination is defined %}
      <div class="mt-4 flex justify-center">
        {{ knp_pagination_render(pagination) }}
      </div>
    {% endif %}
  </div>
{% endblock %}
