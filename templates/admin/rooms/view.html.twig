{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Room Details - My Hotel{% endblock %}

{% block dashboard_content %}
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-sky-700">Room Details</h1>
    <p class="text-sm text-slate-500">Here you can see all the information about this room.</p>
  </div>
  <div class="bg-white rounded shadow p-6 max-w-lg mx-auto">
    <dl class="divide-y divide-slate-200">
      <div class="py-4 flex justify-between">
        <dt class="font-medium text-slate-600">Room Code</dt>
        <dd class="text-slate-900">{{ room.roomCode }}</dd>
      </div>
      <div class="py-4 flex justify-between">
        <dt class="font-medium text-slate-600">Floor</dt>
        <dd class="text-slate-900">{{ room.floor }}</dd>
      </div>
      <div class="py-4 flex justify-between">
        <dt class="font-medium text-slate-600">Type</dt>
        <dd class="text-slate-900">{{ room.type }}</dd>
      </div>
      <div class="py-4 flex justify-between">
        <dt class="font-medium text-slate-600">Number of Beds</dt>
        <dd class="text-slate-900">{{ room.numberOfBeds }}</dd>
      </div>
      <div class="py-4 flex justify-between">
        <dt class="font-medium text-slate-600">Hotel Code</dt>
        <dd class="text-slate-900">{{ room.hotelCode }}</dd>
      </div>
    </dl>
    <div class="mt-6 flex justify-end gap-2">
      <a href="{{ path('admin_rooms_edit', {'roomCode': room.roomCode}) }}" class="px-4 py-2 bg-sky-600 text-white rounded hover:bg-sky-700">Edit</a>
      <a href="{{ path('admin_rooms_delete', {'roomCode': room.roomCode}) }}" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" onclick="return confirm('Are you sure you want to delete this room?');">Delete</a>
      <a href="{{ path('admin_rooms') }}" class="px-4 py-2 bg-slate-200 text-slate-700 rounded hover:bg-slate-300">Back to list</a>
    </div>
  </div>
{% endblock %}
